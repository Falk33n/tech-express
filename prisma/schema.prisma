generator client {
  provider = "prisma-client-js"
}

datasource db {
  /// provider: "postgresql" | "mysql" | "sqlite" | "sqlserver" | "mongodb" | "cockroachdb"
  provider = "mysql"
  url      = env("SECRET_DATABASE_URL")
}

model ErrorLog {
  id          String   @id @default(uuid())
  message     String 
  pathName    String
  method      String?
  stackTrace  String?  @db.Text
  status      Int
  createdAt   DateTime @default(now()) 
}

model Product {
  id               String            @id @default(uuid())
  name             String   
  description      String 
  imageDescription String 
  price            Float    
  quantity         Int      
  categories       ProductCategory[] @relation("ProductCategories")
  imageUrls        ProductImageUrl[] @relation("ProductImageUrls")
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt  
}

model ProductImageUrl {
  id        String  @id @default(uuid())
  url       String  @unique
  productId String
  product   Product @relation("ProductImageUrls", fields: [productId], references: [id])
}

model ProductCategory {
  id        String    @id @default(uuid())
  name      String    @unique
  products  Product[] @relation("ProductCategories")
}

enum Role {
  USER
  ADMIN
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  name           String
  hashedPassword String
  role           Role     @default(USER)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
